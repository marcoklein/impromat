{
  "name": "impromat",
  "version": "0.56.1",
  "private": true,
  "homepage": "https://impromat.app",
  "description": "Application code for Impromat.",
  "type": "module",
  "dependencies": {
    "@ionic/react": "^7.4.1",
    "@ionic/react-router": "^7.4.1",
    "@types/node": "^17.0.0",
    "@types/react": "^18.0.18",
    "@types/react-dom": "^18.0.6",
    "@types/react-router": "^5.1.11",
    "@types/react-router-dom": "^5.1.7",
    "@urql/exchange-graphcache": "^6.0.4",
    "@urql/exchange-retry": "^1.1.1",
    "debug": "^4.3.4",
    "graphql": "^16.6.0",
    "i18next": "^23.5.1",
    "impromat-api": "0.23.1",
    "ionicons": "^7.1.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-error-boundary": "^3.1.4",
    "react-i18next": "^13.2.2",
    "react-markdown": "^8.0.3",
    "react-router": "^5.2.0",
    "react-router-dom": "^5.2.0",
    "react-virtuoso": "^4.3.2",
    "rxjs": "^7.5.6",
    "urql": "^4.0.2",
    "vite-plugin-pwa": "^0.14.7",
    "web-vitals": "^0.2.4"
  },
  "scripts": {
    "start": "yarn compile-markdown && vite",
    "dev": "concurrently \"yarn start\" \"yarn codegen --watch\"",
    "lint": "concurrently \"eslint src test --max-warnings 0\" \"yarn lint:depcruise\" \"yarn deps:check\"",
    "lint:depcruise": "yarn depcruise src",
    "lint:fix": "eslint src --fix",
    "build": "yarn build:prepare && vite build",
    "build:prepare": "yarn compile-markdown && genversion src/version.gen.ts --es6",
    "test": "yarn test:unit && yarn test:backend-up --no-recreate && yarn test:component",
    "test:component": "yarn playwright:install && playwright test",
    "test:unit": "yarn playwright:install && playwright test -c playwright-unit.config.ts",
    "test:unit:ui": "yarn test:unit --ui",
    "test:unit:update-snapshots": "yarn test:unit --update-snapshots",
    "test:e2e": "yarn playwright:install && playwright test --config playwright-e2e.config.ts",
    "test:headed": "yarn test --headed",
    "test:watch": "nodemon --config nodemon-test.json",
    "test:debug": "yarn test:headed --debug",
    "test:backend-up": "yarn docker-compose --profile backend up --wait",
    "test:backend-down": "yarn docker-compose --profile backend down",
    "test:backend-restart": "yarn test:backend-down && yarn test:backend-up",
    "test:backend-rebuild": "yarn docker-compose build api --no-cache",
    "playwright:codegen": "playwright codegen",
    "playwright:install": "playwright install chromium",
    "compile-markdown": "bash ./scripts/generate-markdown.sh",
    "codegen:graphql": "yarn codegen:get-schema-graphql && graphql-codegen",
    "codegen:get-schema-graphql": "mkdir -p schema && cp ../impromat-api/schema/schema.graphql schema/schema.graphql",
    "codegen": "yarn codegen:graphql",
    "docker-compose": "yarn workspace infrastructure run docker-compose",
    "deps:visualize": "yarn depcruise src --include-only \"^src\" --config --output-type dot | dot -T svg > dependency-graph.svg",
    "deps:check": "depcheck",
    "deps:check:oneline": "yarn deps:check --oneline",
    "deps:upgrade": "yarn upgrade-interactive"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^3.0.0",
    "@graphql-codegen/client-preset": "^4.1.0",
    "@graphql-typed-document-node/core": "^3.2.0",
    "@playwright/experimental-ct-react": "^1.39.0",
    "@playwright/test": "^1.39.0",
    "@types/debug": "^4.1.7",
    "@vitejs/plugin-legacy": "^4.0.3",
    "@vitejs/plugin-react": "^3.1.0",
    "concurrently": "^7.6.0",
    "depcheck": "^1.4.6",
    "dependency-cruiser": "^12.11.1",
    "dotenv": "^16.0.3",
    "eslint": "^8.30.0",
    "eslint-config-react-app": "^7.0.1",
    "genversion": "^3.1.1",
    "vite": "^4.3.9"
  }
}
