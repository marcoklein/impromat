{
  "name": "impromat",
  "version": "0.37.0",
  "private": true,
  "homepage": "https://impromat.app",
  "description": "Application code for Impromat.",
  "type": "module",
  "dependencies": {
    "@capacitor/app": "4.0.1",
    "@capacitor/core": "4.1.0",
    "@capacitor/haptics": "4.0.1",
    "@capacitor/keyboard": "4.0.1",
    "@capacitor/status-bar": "4.0.1",
    "@ionic/react": "^7.0.0",
    "@ionic/react-router": "^7.0.0",
    "@playwright/test": "^1.32.3",
    "@types/node": "^12.19.15",
    "@types/react": "^18.0.18",
    "@types/react-dom": "^18.0.6",
    "@types/react-router": "^5.1.11",
    "@types/react-router-dom": "^5.1.7",
    "@types/uuid": "^8.3.4",
    "@urql/devtools": "^2.0.3",
    "@urql/exchange-graphcache": "^6.0.4",
    "@urql/exchange-retry": "^1.1.1",
    "debug": "^4.3.4",
    "flag-icons": "^6.6.6",
    "graphql": "^16.6.0",
    "history": "^4.0.0",
    "immer": "^9.0.15",
    "impromat-api": "0.10.0",
    "ionicons": "^5.4.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-error-boundary": "^3.1.4",
    "react-markdown": "^8.0.3",
    "react-router": "^5.2.0",
    "react-router-dom": "^5.2.0",
    "react-virtuoso": "^4.3.2",
    "rxjs": "^7.5.6",
    "typescript": "^4.1.3",
    "urql": "^4.0.2",
    "uuid": "^9.0.0",
    "vite-plugin-pwa": "^0.14.7",
    "web-vitals": "^0.2.4",
    "workbox-background-sync": "^5.1.4",
    "workbox-broadcast-update": "^5.1.4",
    "workbox-cacheable-response": "^5.1.4",
    "workbox-core": "^5.1.4",
    "workbox-expiration": "^5.1.4",
    "workbox-google-analytics": "^5.1.4",
    "workbox-navigation-preload": "^5.1.4",
    "workbox-precaching": "^5.1.4",
    "workbox-range-requests": "^5.1.4",
    "workbox-routing": "^5.1.4",
    "workbox-strategies": "^5.1.4",
    "workbox-streams": "^5.1.4"
  },
  "scripts": {
    "start": "yarn compile-markdown && vite",
    "dev": "concurrently \"yarn start\" \"yarn codegen --watch\"",
    "lint": "eslint src test --max-warnings 0 && yarn lint:deps",
    "lint:deps": "yarn depcruise src",
    "lint:fix": "eslint src --fix",
    "build": "yarn build:prepare && vite build",
    "build:prepare": "yarn copy-improbib && yarn compile-markdown && genversion src/version.gen.ts --es6",
    "test": "yarn test:vitest:ci && yarn test:backend-up --no-recreate && yarn playwright:install && playwright test",
    "test:vitest:ci": "yarn vitest --reporter=junit --output-file=vitest-junit-results.xml --watch=false",
    "test:vitest": "vitest",
    "test:e2e": "yarn playwright:install && playwright test --config playwright-e2e.config.ts",
    "test:headed": "yarn test --headed",
    "test:watch": "nodemon --config nodemon-test.json",
    "test:debug": "yarn test:headed --debug",
    "test:backend-up": "yarn docker-compose --profile backend up --wait",
    "test:backend-down": "yarn docker-compose --profile backend down",
    "test:backend-restart": "yarn test:backend-down && yarn test:backend-up",
    "test:backend-rebuild": "yarn docker-compose build api --no-cache",
    "playwright:codegen": "playwright codegen",
    "playwright:install": "playwright install chromium",
    "copy-improbib": "cp ../improbib/output/improbib.json ./public/assets/improbib.json",
    "compile-markdown": "bash ./scripts/generate-markdown.sh",
    "codegen:graphql": "yarn codegen:get-schema-graphql && graphql-codegen",
    "codegen:get-schema-graphql": "mkdir -p schema && cp ../impromat-api/schema/schema.graphql schema/schema.graphql",
    "codegen": "yarn codegen:graphql",
    "docker-compose": "yarn workspace infrastructure run docker-compose",
    "deps:visualize": "yarn depcruise src --include-only \"^src\" --config --output-type dot | dot -T svg > dependency-graph.svg"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.20.5",
    "@babel/plugin-syntax-flow": "^7.18.6",
    "@babel/plugin-syntax-import-assertions": "^7.20.0",
    "@babel/plugin-transform-react-jsx": "^7.19.0",
    "@babel/preset-env": "^7.21.5",
    "@capacitor/cli": "4.1.0",
    "@graphql-codegen/cli": "^3.0.0",
    "@graphql-codegen/client-preset": "^2.0.0",
    "@graphql-codegen/introspection": "^3.0.1",
    "@graphql-codegen/typescript": "^3.0.0",
    "@graphql-codegen/typescript-operations": "^3.0.0",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^14.0.0",
    "@testing-library/react-hooks": "^8.0.1",
    "@types/debug": "^4.1.7",
    "@vitejs/plugin-legacy": "^4.0.3",
    "@vitejs/plugin-react": "^3.1.0",
    "concurrently": "^7.6.0",
    "dependency-cruiser": "^12.11.1",
    "dotenv": "^16.0.3",
    "dotenv-cli": "^7.0.0",
    "eslint": "^8.30.0",
    "eslint-config-react-app": "^7.0.1",
    "genversion": "^3.1.1",
    "jsdom": "^22.0.0",
    "vite": "^4.3.4",
    "vitest": "^0.31.1"
  }
}
