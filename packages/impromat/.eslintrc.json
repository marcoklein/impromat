{
  "ignorePatterns": ["**/*.gen.ts"],
  "extends": ["react-app"],
  "rules": {
    "no-restricted-imports": [
      "warn",
      {
        "paths": [
          {
            "name": "@mui/material",
            "message": "Please import directly from the component module, like @mui/material/Box."
          },
          {
            "name": "@mui/icons-material",
            "message": "Please import directly from the component module, like @mui/icons-material/Check."
          }
        ]
      }
    ]
  },
  "overrides": [
    {
      "files": ["test/**/*.ts", "src/**/*.test.ts", "src/**/*.test.tsx"],
      "parserOptions": {
        "project": [
          "./tsconfig.test.json",
          "packages/impromat/tsconfig.storybook.json"
        ]
      },
      "rules": {
        "@typescript-eslint/no-floating-promises": "error"
      }
    }
  ]
}
