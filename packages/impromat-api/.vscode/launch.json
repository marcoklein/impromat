{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch impromat-api",
      "runtimeExecutable": "node",
      "runtimeArgs": [
        "--nolazy",
        "-r dotenv/config",
        "-r",
        "ts-node/register/transpile-only",
        "--loader",
        "ts-node/esm"
      ],
      "args": ["src/index.ts"],
      "cwd": "${workspaceRoot}",
      "internalConsoleOptions": "openOnSessionStart",
      "skipFiles": ["<node_internals>/**", "node_modules/**"]
    }
  ]
}
