{
  "name": "impromat-api",
  "version": "0.4.2",
  "description": "GraphQL API for Impromat",
  "author": "Marco Klein",
  "type": "module",
  "license": "MIT",
  "scripts": {
    "start": "ts-node --transpile-only src/index.ts",
    "start:dev": "ts-node -r dotenv/config src/index.ts",
    "dev": "concurrently \"nodemon\" \"yarn codegen:watch\"",
    "codegen:graphql": "graphql-codegen",
    "codegen:json-schema": "ts-json-schema-generator --path 'src/graphql/schema.gen.ts' --type 'Workshop' --out schema/schema.gen.json --no-top-ref --id Workshop",
    "codegen": "yarn codegen:graphql && yarn codegen:json-schema",
    "codegen:watch": "nodemon --config nodemon-codegen.json",
    "test": "yarn codegen:graphql && mocha --loader=ts-node/esm \"test/**/*.test.ts\"",
    "test:watch": "concurrently \"nodemon --config nodemon-test.json\" \"yarn codegen:watch\"",
    "infra": "./infrastructure/cli.sh",
    "infra:install": "./infrastructure/install.sh"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^2.13.1",
    "@graphql-codegen/typescript": "^2.7.3",
    "@graphql-codegen/typescript-resolvers": "^2.7.3",
    "@types/chai": "^4.3.3",
    "@types/express": "^4.17.13",
    "@types/express-session": "^1.17.5",
    "@types/mocha": "^9.1.1",
    "@types/node": "^18.7.21",
    "@types/session-file-store": "^1.2.2",
    "@types/uuid": "^8.3.4",
    "chai": "^4.3.6",
    "concurrently": "^7.4.0",
    "graphql-request": "^5.0.0",
    "mocha": "^10.0.0",
    "nodemon": "^2.0.19",
    "ts-json-schema-generator": "^1.1.2",
    "typescript": "^4.8.3"
  },
  "dependencies": {
    "@envelop/core": "^2.6.0",
    "@envelop/disable-introspection": "^3.6.0",
    "@graphql-tools/load-files": "^6.6.1",
    "@graphql-tools/mock": "^8.7.5",
    "@graphql-tools/schema": "^9.0.3",
    "@graphql-yoga/node": "^2.13.13",
    "ajv": "^8.11.0",
    "dotenv": "^16.0.2",
    "express": "^4.18.1",
    "express-session": "^1.17.3",
    "google-auth-library": "^8.5.1",
    "graphql": "^16.6.0",
    "graphql-scalars": "^1.18.0",
    "session-file-store": "^1.5.0",
    "ts-node": "^10.9.1",
    "uuid": "^9.0.0"
  }
}
