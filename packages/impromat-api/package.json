{
  "name": "impromat-api",
  "version": "0.16.0",
  "description": "",
  "author": "Marco Klein <marcoklein",
  "private": true,
  "scripts": {
    "start": "yarn db:migrate && node dist/src/main.js",
    "db:migrate": "prisma migrate deploy",
    "build": "yarn prisma:generate && yarn copy-improbib && nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "dev": "dotenv -c development -- yarn start:dev",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "start:dev": "yarn copy-improbib && nest start --watch",
    "start:debug": "nest start --debug --watch",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test:load-env": "dotenv -c test --",
    "test": "yarn test:backend-up && yarn codegen && yarn test:jest",
    "test:unit": "yarn test:jest src/**/*.test.ts",
    "test:jest": "yarn test:load-env jest",
    "test:backend-up": "yarn docker-compose up database --wait && yarn test:prepare-db",
    "test:backend-restart": "yarn docker-compose down && yarn test:backend-up",
    "test:prepare-db": "yarn test:load-env yarn prisma migrate reset --skip-generate --force",
    "test:watch": "yarn test --watch",
    "test:cov": "yarn test --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "codegen": "graphql-codegen & yarn prisma:generate",
    "codegen:watch": "yarn codegen --watch",
    "copy-improbib": "mkdir -p assets && cp ../improbib/output/improbib.json ./assets/improbib.json",
    "docker-compose": "yarn workspace infrastructure docker-compose"
  },
  "dependencies": {
    "@casl/ability": "^6.5.0",
    "@casl/prisma": "^1.4.1",
    "@nestjs/apollo": "^12.0.7",
    "@nestjs/common": "^10.1.3",
    "@nestjs/config": "^3.0.0",
    "@nestjs/core": "^10.1.3",
    "@nestjs/graphql": "^12.0.8",
    "@nestjs/platform-express": "^10.1.3",
    "@prisma/client": "^5.1.1",
    "apollo-server-express": "^3.12.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "cookie-signature": "^1.2.1",
    "express": "^4.18.2",
    "express-session": "^1.17.3",
    "fuse.js": "^6.6.2",
    "google-auth-library": "^9.0.0",
    "graphql": "^16.7.1",
    "improbib": "0.4.3",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1",
    "session-file-store": "^1.5.0",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^5.0.0",
    "@graphql-codegen/client-preset": "^4.1.0",
    "@graphql-codegen/typed-document-node": "^5.0.1",
    "@graphql-codegen/typescript-operations": "^4.0.1",
    "@nestjs/cli": "^10.1.11",
    "@nestjs/schematics": "^10.0.2",
    "@nestjs/testing": "^10.1.3",
    "@types/cookie-signature": "^1.1.0",
    "@types/express": "^4.17.17",
    "@types/express-session": "^1.17.7",
    "@types/jest": "29.5.3",
    "@types/node": "20.4.8",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^6.2.1",
    "@typescript-eslint/parser": "^6.2.1",
    "dotenv": "^16.3.1",
    "dotenv-cli": "^7.2.1",
    "eslint": "^8.46.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "29.6.2",
    "jest-junit": "^16.0.0",
    "jest-mock-extended": "^3.0.5",
    "prettier": "^3.0.1",
    "prisma": "^5.1.1",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "29.1.1",
    "ts-loader": "^9.4.4",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "4.2.0",
    "typescript": "^5.1.6",
    "webpack": "^5.88.2"
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  }
}
