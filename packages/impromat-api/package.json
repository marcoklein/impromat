{
  "name": "impromat-api",
  "version": "0.19.0",
  "description": "",
  "author": "Marco Klein <hello@marcoklein.dev>",
  "private": true,
  "scripts": {
    "start": "bun db:migrate && node dist/src/main.js",
    "db:migrate": "prisma migrate deploy",
    "build": "bun prisma:generate && bun copy-improbib && nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "dev": "dotenv -c development -- bun start:dev",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:reset": "prisma migrate reset",
    "nest": "nest",
    "start:dev": "bun copy-improbib && nest start --watch",
    "start:debug": "nest start --debug --watch",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test:load-env": "dotenv -c test --",
    "test": "bun test:backend-up && bun codegen && bun test:jest",
    "test:unit": "bun test:jest src/**/*.test.ts",
    "test:jest": "bun test:load-env jest",
    "test:backend-up": "bun docker-compose up database --wait && bun docker-compose run reset-database",
    "test:backend-restart": "bun docker-compose down && bun test:backend-up",
    "test:watch": "bun test --watch",
    "test:cov": "bun test --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "codegen": "graphql-codegen & bun prisma:generate",
    "codegen:watch": "bun codegen --watch",
    "copy-improbib": "mkdir -p assets && cp ../improbib/output/improbib.json ./assets/improbib.json",
    "docker-compose": "bun workspace infrastructure docker-compose"
  },
  "dependencies": {
    "@casl/ability": "^6.5.0",
    "@casl/prisma": "^1.4.0",
    "@nestjs/apollo": "^10.2.0",
    "@nestjs/common": "^9.0.0",
    "@nestjs/config": "^2.3.1",
    "@nestjs/core": "^9.0.0",
    "@nestjs/graphql": "^10.2.0",
    "@nestjs/platform-express": "^9.0.0",
    "@prisma/client": "^5.2.0",
    "apollo-server-express": "^3.11.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "cookie-signature": "^1.2.0",
    "express": "^4.18.2",
    "express-session": "^1.17.3",
    "fuse.js": "^6.6.2",
    "google-auth-library": "^8.7.0",
    "graphql": "^16.6.0",
    "improbib": "link:improbib",
    "impromat-ai": "link:impromat-ai",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.2.0",
    "session-file-store": "^1.5.0",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^3.0.0",
    "@graphql-codegen/client-preset": "^2.0.0",
    "@graphql-codegen/typed-document-node": "^3.0.0",
    "@graphql-codegen/typescript-operations": "^3.0.0",
    "@nestjs/cli": "^9.0.0",
    "@nestjs/schematics": "^9.0.0",
    "@nestjs/testing": "^9.3.7",
    "@types/cookie-signature": "^1.1.0",
    "@types/express": "^4.17.17",
    "@types/express-session": "^1.17.5",
    "@types/jest": "29.2.4",
    "@types/node": "18.11.18",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "bun-types": "^1.0.1",
    "dotenv": "^16.0.3",
    "dotenv-cli": "^7.0.0",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "prettier": "^2.3.2",
    "prisma": "^5.2.0",
    "source-map-support": "^0.5.20",
    "supertest": "^6.1.3",
    "ts-loader": "^9.2.3",
    "tsconfig-paths": "4.1.1",
    "typescript": "^4.7.4",
    "webpack": "^5.75.0"
  },
  "prisma": {
    "seed": "bun run prisma/seed.ts"
  }
}
