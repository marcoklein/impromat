{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "es2021",
    "esModuleInterop": true,
    "strict": true,
    "strictNullChecks": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist"
  },
  "include": ["./src/**/*.ts"]
}
