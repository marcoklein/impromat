{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "es2017",
    "esModuleInterop": true,
    "strict": true,
    "strictNullChecks": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "declaration": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "./build"
  },
  "ts-node": {
    "experimentalSpecifierResolution": "node"
  }
}
