{
  "name": "impromat",
  "version": "26",
  "private": true,
  "type": "module",
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "nohoist": [
      "**/@types/**",
      "impromat/**"
    ]
  },
  "devDependencies": {
    "@changesets/cli": "^2.25.2",
    "lerna": "^6.0.0"
  },
  "scripts": {
    "dev": "lerna run --scope impromat --scope impromat-api dev",
    "lint": "lerna run lint",
    "test": "lerna run test",
    "build": "lerna run build",
    "bootstrap": "lerna bootstrap",
    "changed": "lerna ls --since main --all",
    "impromat": "lerna run --scope impromat",
    "impromat-api": "lerna run --scope impromat-api",
    "infra:config": "./packages/infrastructure/configure.sh"
  },
  "description": "Impromat Monorepo",
  "main": "index.js",
  "author": "Marco Klein <hello@marcoklein.dev>",
  "license": "MIT"
}
