{
  "$schema": "https://raw.githubusercontent.com/nrwl/nx/master/packages/nx/schemas/nx-schema.json",
  "affected": {
    "defaultBase": "main"
  },
  "namedInputs": {
    "default": ["{projectRoot}/**/*"]
  },
  "targetDefaults": {
    "build": {
      "cache": true,
      "dependsOn": ["^build"],
      "inputs": [
        "default",
        "!{projectRoot}/test/**/*",
        "!{projectRoot}/dist/**/*",
        "!{projectRoot}/build/**/*"
      ],
      "outputs": ["{projectRoot}/dist", "{projectRoot}/build"]
    },
    "codegen": {
      "cache": true
    },
    "test": {
      "cache": true
    },
    "lint": {
      "cache": true
    }
  }
}
